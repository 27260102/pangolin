ANTHROPIC_BASE_URL=http://127.0.0.1:29186/api
ANTHROPIC_AUTH_TOKEN=cr_xxx

FEISHU_APP_ID=cli_xxx
FEISHU_APP_SECRET=xxx
FEISHU_VERIFICATION_TOKEN=xxx
# Event mode: ws (default) / http / both
FEISHU_EVENT_MODE=ws
# Optional API base override
FEISHU_API_BASE=https://open.feishu.cn/open-apis
# FEISHU_ENCRYPT_KEY=xxx

# Menu event keys (application.bot.menu_v6)
FEISHU_MENU_ACCEPT_KEY=menu_accept_key
FEISHU_MENU_ACCEPT_ALL_KEY=menu_accept_all_key
FEISHU_MENU_REJECT_KEY=menu_reject_key
FEISHU_MENU_PROJECTS_KEY=menu_projects_key

# Stream settings
FEISHU_STREAM_MODE=merge
FEISHU_STREAM_MIN_CHARS=120
FEISHU_STREAM_INTERVAL=1.2
FEISHU_TEXT_MAX_BYTES=153600

# Auto-allow tools
AUTO_ALLOW_TOOLS=Read;Search;List;Glob;Bash(ls:*);Bash(pwd);Bash(cat:*);Bash(head:*);Bash(tail:*);Bash(wc:*);Bash(stat:*);Bash(git:status,git:diff)

# Debug
PANGOLIN_DEBUG_EVENTS=0
PANGOLIN_DEBUG_CLAUDE=0

# SQLite
PROJECT_DB_PATH=./projects.db
